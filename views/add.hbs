<div class="row">
  <div class="col-lg-12">
    <button type="button" class="btn btn-outline-secondary float-right logoutButton">Log Out</button>
  </div>
</div>
<div class="container">
  <div class="jumbotron">
    <h1>Your Story</h1>
    <h3>What do you know? What will you share?</h3>
    <hr>
    <a href="/all" class="btn btn-outline-secondary btn-lg">
      <span class="fa fa-th-list"></span> All Stories</a>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <div class="card storyCard">
        <div class="card-header">
          New Story
        </div>
        <div class="card-body">
          <form action=""  role="form">
            <div class="form-group">
              <label for="title">Title</label>
              <input type="text" class="form-control" id="title" placeholder="Lessons from My First Garden">
            </div>
            <div class="form-group">
              <label for="story">Story</label>
              <textarea type="text" class="form-control" id="story" rows="10"
                placeholder="Once upon a time..."></textarea>
            </div>
          </form>
          <br>
          <div class="text-right addStory">
            <button type="submit" class="btn btn-outline-secondary btn-md" id="add-btn">
              <span class="fa fa-fire"></span> Add your wisdom</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript" src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
<script src="js/add.js" type="text/javascript"></script>