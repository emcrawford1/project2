
<body>

  <div class="container">
    <div class="jumbotron">
      <h1>STORIES</h1>
      <h3>THE GREATEST WAY TO ADD YOUR STORY AND SEE ALL STORIES!</h3>
      <hr>
      
      <a href="/add" class="btn btn-danger btn-lg">
        <span class="fa fa-plus"></span> Add New Story</a>
    </div>
    <div class="row">

      <div class="col-lg-12">

        <div class="card">
          <div class="card-header">
            Story Database
          </div>
          <div class="card-body" id="well-section">

            <!-- Content will go in here -->

            <ul>
              {{#each story}}
              {{> stories/story-block}}
              {{/each}}
            </ul>

          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="js/all.js" type="text/javascript"></script>

</body>

</html>
